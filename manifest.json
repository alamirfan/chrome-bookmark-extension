{
    "name": "Bookmark App",
    "description": "Bookmark the current page with additional information",

    "icons": { 
		"16": "icons/bookmark32.png",
		"48": "icons/bookmark64.png",
		"128": "icons/bookmark128.png"
	},

    "browser_action": {
        "default_popup": "htmlfiles/popup.html"
    },

    "background": {
        "scripts": [
            "plugins/jquery-3.4.0.min.js",
            "scripts/background.js"
        ],
        "persistent": false
    },

    "permissions": [
        "activeTab",
        "tabs",
        "http://*/*",
        "https://*/*",
        "file://*/*",
        "<all_urls>"
    ],

    "manifest_version": 2,
    "version": "1.0"
}

